{
  "name": "klarcode-manager",
  "version": "0.0.1",
  "description": "KlarCode Manager - Cross-platform Electron app",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win nsis",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.klarcodemanager",
    "productName": "KlarCode Manager",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "electron-store": "^9.0.0" 
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  }
}
